<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/main_side_padding"
    android:id="@+id/item_movie_review_layout"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_movie_review_author"
        style="@style/Header"
        android:layout_marginBottom="@dimen/main_side_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_movie_review_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>